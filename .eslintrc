{
  "extends": [
    "airbnb",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          "jsx"
        ]
      }
    ],
    "max-len": [
      "error",
      160
    ],
    "linebreak-style": 0,
    "react/require-default-props": 0,
    "indent": [
      "error",
      2
    ]
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  }
}